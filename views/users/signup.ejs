<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup for Wanderlust</h1>
  <div class="col-8 offset-2">
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input id="username" required name="username"  type="text" class="form-control"/>
            <div class="valid-feedback"> looks good!</div>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input id="email" required name="email"  type="email" class="form-control"/>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" required name="password"  type="password" class="form-control"/>
          </div>

          <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
